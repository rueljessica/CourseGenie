<!-- Adicione este modal após o fechamento da tag </div> -->
<div id="success-modal" class="flowbite-modal">
    <div class="flowbite-modal-overlay"></div>
    <div class="flowbite-modal-wrapper">
        <div class="flowbite-modal-container">
            <div class="flowbite-modal-header">
                <h3 class="flowbite-modal-title">Sucesso!</h3>
                <button class="flowbite-modal-close" data-modal-close="#success-modal"></button>
            </div>
            <div class="flowbite-modal-body">
                <p>Sua senha foi alterada com sucesso.</p>
            </div>
        </div>
    </div>
</div>

<script src={{"../path/to/flowbite/dist/flowbite.min.js"}}></script>
<script>
    const form = document.getElementById('password-form');
    const successModal = new FlowbiteModal('#success-modal');

    form.addEventListener('submit', function(event) {
        event.preventDefault();

        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirm-password').value;

        if (password !== confirmPassword) {
            alert('As senhas não correspondem. Por favor, digite senhas iguais.');
            return;
        }

        // Exibir o modal de sucesso
        successModal.open();
    });
</script>

